<!DOCTYPE html>
<html>
<head>
    <title>URL Shortener</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <div class="header">Shorten Your URL</div>
    <div class="container">
        <% if (typeof error !== 'undefined') { %>
            <div class="message error"><%= error %></div>
        <% } %>
        <% if (typeof success !== 'undefined') { %>
            <div class="message success"><%= success %></div>
        <% } %>
        <form action="/" method="POST">
            <input type="url" name="url" placeholder="Paste your long URL here..." required autocomplete="off">
            <button type="submit">Shorten URL</button>
        </form>
        <% if (recent && recent.length > 0) { %>
            <div class="recent-list">
                <h3>Recently Shortened</h3>
                <ul>
                <% recent.forEach(function(item) { %>
                    <li><a href="/<%= item.shortId %>" target="_blank"><%= item.shortUrl %></a></li>
                <% }) %>
                </ul>
            </div>
        <% } %>
    </div>
    <div class="footer">&copy; <%= new Date().getFullYear() %> URL Shortener</div>
</body>
</html> 